@model Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Eğitim & Sertifikalar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sertifikalar</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Sertifika ve eğitim ile ilgili değişiklikleri aşağıdaki panelden yapabilirsiniz:
						</div>
						<form method="post">
							<input type="hidden" asp-for="ExperienceId"/>
							<label>Okul Bilgisi & Sertifika Adı</label>
							<input type="text" asp-for="Head" class="form-control" /><br />
							<label>Kurum Bilgisi</label>
							<input type="text" asp-for="Title" class="form-control" /><br />
							<label>Tarih Aralığı</label>
							<input type="text" asp-for="Date" class="form-control" /><br />
							<label>Açıklama</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-warning">Eğitim & Sertifika'yı Güncelle</button>
						</form>
					</div>
				</div>
				<div class="card">
				</div>

			</div>

		</div>
	</div>
</div>

